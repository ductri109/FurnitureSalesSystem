@model List<FurnitureSalesSystem.Models.Customer>
@{
    ViewData["Title"] = "Danh sách khách hàng";
    var currentPage = ViewBag.CurrentPage as int? ?? 1;
    var totalPages = ViewBag.TotalPages as int? ?? 1;
}

<h2 class="text-2xl font-bold mb-4">Danh sách khách hàng</h2>

<table class="min-w-full bg-white shadow rounded-lg">
    <thead>
        <tr class="bg-gray-100 text-left">
            <th class="py-2 px-4">#</th>
            <th class="py-2 px-4">Họ tên</th>
            <th class="py-2 px-4">SĐT</th>
            <th class="py-2 px-4">Email</th>
            <th class="py-2 px-4">Địa chỉ</th>
            <th class="py-2 px-4">Số đơn hàng</th>
            <th class="py-2 px-4">VIP</th>
        </tr>
    </thead>
    <tbody>
        @for (int i = 0; i < Model.Count; i++)
        {
            var customer = Model[i];
            <tr class="border-t">
                <td class="py-2 px-4">@((currentPage - 1) * 5 + i + 1)</td>
                <td class="py-2 px-4">@customer.FullName</td>
                <td class="py-2 px-4">@customer.Phone</td>
                <td class="py-2 px-4">@customer.Email</td>
                <td class="py-2 px-4">@customer.Address</td>
                <td class="py-2 px-4">@customer.TotalOrders</td>
                <td class="py-2 px-4">
                    @if (customer.IsVip)
                    {
                        <span class="text-green-600 font-semibold">✔</span>
                    }
                    else
                    {
                        <span class="text-gray-400">–</span>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>

<!-- Pagination -->
<div class="mt-4 flex justify-center space-x-1">
    @for (int i = 1; i <= totalPages; i++)
    {
        <a href="@Url.Action("Index", new { page = i })"
           class="px-3 py-1 rounded @((i == currentPage) ? "bg-blue-500 text-white" : "bg-gray-200 hover:bg-gray-300")">
            @i
        </a>
    }
</div>
