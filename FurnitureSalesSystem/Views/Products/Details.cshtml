@model FurnitureSalesSystem.Models.Product
@{
    ViewData["Title"] = "Chi tiết sản phẩm";
    Layout = "~/Views/Shared/_Layout.cshtml"; // sử dụng layout chính của hệ thống
}
<div class="content-fade-in">
    <!-- Breadcrumb và nút quay lại -->
    <div class="flex justify-between items-center mb-6">
        <nav class="text-sm text-gray-500">
            <a asp-controller="Home" asp-action="Index" class="hover:text-indigo-600">Trang chủ</a>
            <span class="mx-2">/</span>
            <a asp-controller="Products" asp-action="Index" class="hover:text-indigo-600">Sản phẩm</a>
            <span class="mx-2">/</span>
            <span class="text-gray-800 font-medium">@Model.Name</span>
        </nav>
        <a asp-action="Index" class="bg-white border border-gray-300 px-4 py-3 bg-gray-100 text-gray-800 rounded-lg hover:bg-gray-200 transition-colors">
            <i class="fas fa-arrow-left"></i>
        </a>
    </div>

    <!-- Nội dung chi tiết sản phẩm -->
    <div class="bg-white rounded-xl shadow-lg p-8">
        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            <!-- Cột trái: ảnh sản phẩm -->
            <div>
                <div class="mb-4 rounded-lg overflow-hidden border">
                    <img src="@Model.Image" alt="Ảnh sản phẩm" class="w-full h-96 object-cover transition-transform duration-300 hover:scale-105" />
                </div>
            </div>

            <!-- Cột phải: thông tin chi tiết -->
            <div class="flex flex-col">
                <div class="mt-4 flex items-center justify-between">
                    <span>
                        <h2 class="text-3xl font-bold text-gray-800 mt-1">@Model.Name</h2>
                        <span class="inline-block mt-1 text-xs font-semibold px-3 py-1 rounded-full bg-[var(--accent-color)] text-white">
                            @Model.Category?.Name
                        </span>
                    </span>
                    <span class="bg-[var(--primary-color)] text-white px-4 py-2 rounded-full text-2xl font-semibold shadow">
                        @String.Format("{0:N0} ₫", Model.Price)
                    </span>

                </div>
                <div class="mt-6 border-t pt-1">
                    <span class="font-medium @(Model.Quantity > 0 ? "text-green-700" : "text-red-600")">
                        <h4 class="font-semibold text-gray-700 mb-2">Số lượng sản phẩm</h4>
                        @if (Model.Quantity > 0)
                        {
                            <span>Còn hàng (@Model.Quantity sản phẩm)</span>
                        }
                        else
                        {
                            <span>Hết hàng</span>
                        }
                    </span>
                </div>



                <div class="mt-6 border-t pt-6">
                    <h4 class="font-semibold text-gray-700 mb-2">Mô tả sản phẩm</h4>
                    <div class="mt-2 text-gray-600 prose prose-sm max-w-none">
                        @Html.Raw(Model.Description)
                    </div>
                </div>

                <!-- Action -->
                <div class="mt-auto pt-8 flex space-x-4">
                    @if (User.IsInRole("Nhân viên bán hàng"))
                    {
                        <a asp-action="Edit" asp-route-id="@Model.Id" class="px-4 py-2 bg-[var(--primary-color)] text-white rounded-lg hover:bg-[var(--secondary-color)] flex items-center">
                            <i class="fas fa-edit mr-2"></i>
                            Chỉnh sửa sản phẩm
                        </a>
                    }
                </div>
            </div>
        </div>
    </div>
</div>
